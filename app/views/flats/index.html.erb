
<div class="container mt-3">
<h1>Have a look at our available flats</h1>
<p><%= @flats.count %> flats</p>
  <div class="flats-container">
    <% @flats.each do |flat| %>
      <div class="trip-card">
        <img src="..." alt="Flat image" class="trip-card-img">
        <div class="trip-content">
          <div>
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
          </div>
          <h2><%= flat.price_per_night %>$</h2>
        </div>
        <div class="btn-container">
          <%= link_to "See details", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Delete", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
        </div>
      </div>
    <% end %>
  </div>
</div>
