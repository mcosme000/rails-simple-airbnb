<%= simple_form_for @flat do |f| %>
  <%= f.input :name, label: "Flat name" %>
  <%= f.input :address, label: "Flat address" %>
  <%= f.input :description, label: "Flat description" %>
  <%= f.input :price_per_night, input_html: { min: '25', max: '300', step: '25' }, label: "Price per night" %>
  <%= f.input :number_of_guests, input_html: { min: '1', max: '5' }, label: "Number of guests" %>
  <%= f.button :submit, class: "btn btn-success mt-3" %>
<% end %>
